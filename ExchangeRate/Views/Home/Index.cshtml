@{
    ViewData["Title"] = "Home Page";
}

<h1>Chuyển từ USD sang VND</h1>
<form>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Tỉ giá:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="22757">
        </div>
    </div>
    <div class="form-group row">
        <label for="usd" class="col-sm-2 col-form-label">Nhập USD:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="usd">
        </div>
    </div>
    <button type="button" id="submit" onclick="changeRate()">Chuyển đổi</button>
    
     <div class="form-group row mt-3">
            <label for="usd" class="col-sm-2 col-form-label">Kết quả:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="vnd">
            </div>
        </div>
</form>
<script>
    function changeRate(){
        const usd = document.getElementById("usd").value;
        let vnd = usd * 22757;
        console.log('vnd', vnd);
        document.getElementById("vnd").value = vnd;

    }
</script>